<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <style>

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
            border: 1px solid black;
        }

        th {
            background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
            font-size: 22px;
        }
        td{
            background-image: linear-gradient(to top, #cfd9df 0%, #e2ebf0 100%);
            font-size: 18px;
        }
        h2 {
            text-align: center;
        }

        .div_anchor {
            width: 100%;
            height: max-content;
            text-align: center;
            margin-top: 50px;
        }

        a {
            text-align: center;
            text-decoration: none;
            font-size: 1.5em;
            font-weight: bolder;
            padding: 10px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }
    </style>
</head>

<body>
    <h2>All Products</h2>
    <table>
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Category</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product=> { %>
                <tr>
                    <td>
                        <%= product["Product Id"] %>
                    </td>
                    <td>
                        <%= product.Name %>
                    </td>
                    <td>
                        <%= product.Quantity %>
                    </td>
                    <td>
                        ₹<%= product.Price %>
                    </td>
                    <td>
                        <%= product.Category %>
                    </td>
                    <td>
                        ₹<%= product.Total %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <div class="div_anchor">
        <a href="dashboard.html">Home</a>
    </div>
</body>

</html>